<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krantipatil.sosdemo.Add_location">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="30dp"
                android:text="Let's Help Other!!"
                android:textColor="@color/graydark"
                android:textSize="30dp" />

            <TextView
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="20dp"
                android:text="Yoour location is safe with us.
 It is not shared with anyone"
                android:textColor="@color/graydark"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="40dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_domain_black_24dp" />

                <TextView
                    android:id="@+id/add_location_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="15dp"
                    android:text="HOME LOCATION"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/add_location_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="40dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_content_paste_black_24dp" />

                <TextView
                    android:id="@+id/add_location_work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="15dp"
                    android:text="WORK LOCATION"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/add_location_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
